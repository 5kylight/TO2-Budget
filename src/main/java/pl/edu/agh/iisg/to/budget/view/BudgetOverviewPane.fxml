<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.iisg.to.budget.controller.BudgetOverviewController">
    <center>
        <ScrollPane prefHeight="520.0" prefWidth="650.0">
            <content>
                <TableView fx:id="budgetTable" prefHeight="500.0" prefWidth="650.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="categoryNameColumn" prefWidth="75.0" text="Category Name" />
                        <TableColumn fx:id="parentNameColumn" prefWidth="200.0" text="Parent Category Name" />
                        <TableColumn fx:id="spentColumn" prefWidth="75.0" text="Spent" />
                        <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Planned" />
                        <TableColumn fx:id="balanceColumn" prefWidth="75.0" text="Balance" />
                        <!--<TableColumn fx:id="\" prefWidth="75.0" text="Inflow" />-->
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </ScrollPane>
    </center>

    <right>
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="TOP_RIGHT">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <children>

                <ProgressBar fx:id="progressBar" blendMode="RED" depthTest="ENABLE" maxWidth="1.7976931348623157E308" mouseTransparent="true" opacity="0.93">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <effect>
                        <Bloom threshold="0.51">
                            <input>
                                <MotionBlur>
                                    <input>
                                        <GaussianBlur />
                                    </input>
                                </MotionBlur>
                            </input>
                        </Bloom>
                    </effect>
                </ProgressBar>
                <Button fx:id="addButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddAction" text="Add">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="editButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleEditAction" text="Edit">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="deleteButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDeleteAction" text="Delete">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>


            </children>
            <!--<BorderPane.margin>-->
